{
  "compilerOptions": {
    "target": "ES2022",
    "experimentalDecorators": true,
    "useDefineForClassFields": false,
    "module": "ESNext",
    "lib": [
      "ES2022",
      "DOM",
      "DOM.Iterable"
    ],
    "skipLibCheck": true,
    "types": [
      "node"
    ],
    "moduleResolution": "bundler",
    "isolatedModules": true,
    "moduleDetection": "force",
    "allowJs": true,
    "jsx": "react-jsx",
    
    // Eliminamos la secci√≥n "paths" ya que causaba conflicto con Vite
    // "paths": {
    //   "@/*": [ "./*" ]
    // },
    
    "allowImportingTsExtensions": true,
    "noEmit": true
  }
}
